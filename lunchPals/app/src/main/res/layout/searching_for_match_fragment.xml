<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/search_restaurant_image_wrapper_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:clipChildren="true">
            <ImageView
                android:id="@+id/search_restaurant_image_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:contentDescription="Restaurant Logo"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/search_restaurant_image_wrapper_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:clipChildren="true"
            android:layout_below="@id/search_restaurant_image_wrapper_0">
            <ImageView
                android:id="@+id/search_restaurant_image_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:contentDescription="Restaurant Logo"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/search_restaurant_image_wrapper_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:clipChildren="true"
            android:layout_below="@id/search_restaurant_image_wrapper_1">
            <ImageView
                android:id="@+id/search_restaurant_image_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:contentDescription="Restaurant Logo"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkTransparent"/>


    <RelativeLayout
        android:id="@+id/searching_for_match_progress_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ProgressBar
            android:id="@+id/searching_for_match_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/searching_for_match_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/searching_for_match"
            android:paddingTop="16dp"
            android:layout_below="@id/searching_for_match_progress"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/cancelMatchSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="@string/cancel"
            android:layout_centerHorizontal="true"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_below="@id/searching_for_match_text"/>

    </RelativeLayout>



</RelativeLayout>